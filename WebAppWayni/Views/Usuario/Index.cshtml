@using WebAppWayni.Models;
@model List<Usuario>
@{
    ViewData["Title"] = "Usuarios";
}
<style>
    .semicirculo {
        background: red;
        border: 2px solid white;
        margin: 2%;
        height: 70px;
        border-bottom-left-radius: 50% 100%;
        border-bottom-right-radius: 50% 100%;
        width: 90%;
    }
</style>
<h2>Listado de Usuarios</h2>
<button type="button" class="btn btn-outline-success btn-block" onclick="location.href='@Url.Action("Create", "Usuario")'">Crear Nuevo Usuario</button>
<div class="mb-3"></div>

<div class="mb-3"><div class="semicirculo" style="width:auto;"></div></div>
<div class="row  justify-content-center">
    @foreach (var usuario in Model)
        {
    <div class="col-md-4 col-sm-12">
            <div class="card mb-3">
            <div class="card-body">
                    <h5 class="card-title">@usuario.Nombre @usuario.Apellido</h5>
                    <p class="card-text">DNI @usuario.Dni</p>
                    <div style="text-align:right">
                        <button type="button" class="btn btn-outline-primary btn-sm" onclick="location.href='@Url.Action("Edit", "Usuario", new { id = usuario.Id })'">Editar</button>
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="location.href='@Url.Action("Details", "Usuario", new { id = usuario.Id })'">Eliminar</button>
                    </div>
        </div>
        </div>
    </div>
        }
</div>