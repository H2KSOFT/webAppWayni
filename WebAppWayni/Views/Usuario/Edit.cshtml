@using WebAppWayni.Models;
@model Usuario

<h2>Actualizar Usuario</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="Nombre" asp-for="Nombre">Nombre</label>
        <input type="text" class="form-control" asp-for="Nombre" id="Nombre" name="Nombre" value="@Model?.Nombre" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Apellido" asp-for="Apellido">Apellido</label>
        <input type="text" class="form-control" asp-for="Apellido" id="Apellido" name="Apellido" value="@Model?.Apellido" />
        <span asp-validation-for="Apellido" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Dni" asp-for="Dni">DNI</label>
        <input type="text" class="form-control" asp-for="Dni" id="Dni" name="Dni" value="@Model?.Dni" />
        <span asp-validation-for="Dni" class="text-danger"></span>
    </div>
    <div class="mb-3"></div>
    <button type="submit" class="btn btn-primary">Actualizar</button>
    <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Usuario")'">Cancelar</button>
</form>
